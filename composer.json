{
    "name": "phwoolcon/bootstrap",
    "description": "Phalcon + Swoole Framework Bootstrap",
    "keywords": ["framework", "phwoolcon", "phalcon", "swoole"],
    "type": "project",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Christopher CHEN",
            "email": "fishdrowned@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.5.0",
        "phwoolcon/phwoolcon": "~1.0",
        "phwoolcon/auth": "dev-master",
        "phwoolcon/payment": "~1.0"
    },
    "autoload": {
        "classmap": [
            "app"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "bin/install/generate-cookie-encrypt-key"
        ],
        "pre-autoload-dump": [
            "bin/install/update-package-resource"
        ],
        "post-autoload-dump": [
            "bin/convert-autoload",
            "bin/cli clear:cache -c"
        ]
    }
}
